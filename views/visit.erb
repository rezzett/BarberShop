<h2>Записатся...</h2>
<form action="/visit" method="post" role="form">
  <div class="form-group">
    <label for="username">Ваше имя:</label>
    <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Ваше имя" name="user_name"  value="<%=@user_name %>">
  </div>
  <div class="form-group">
    <label for="phone">Телефон:</label>
    <input type="text" class="form-control" id="phone" aria-describedby="emailHelp" placeholder="Телефон" name="user_phone" value="<%=@user_phone %>">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Выбирете мастера:</label>
    <select class="form-control" id="exampleFormControlSelect1" name="master">
      <option>Pit Wallker</option>
      <option>Jessie Pinkman</option>
      <option>Maria Kim</option>
    </select>
  </div>

  <div class="form-group">
    <label for="time">Время визита:</label>
    <input type="text" class="form-control" id="time" aria-describedby="emailHelp" placeholder="Дата и время" name="visit_time" value="<%=@visit_time %>" >
  </div>

  <div class="form-group">
    <label for="time">Закажите краску для волос:</label>
    <select name="colorpicker">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Записатся</button>
</form>
<script type="text/javascript" defer>
    $(function () {
        $('select[name="colorpicker"]').simplecolorpicker();
    })
</script>